<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rlam.cushmanshowcaseapp.HaulerXMainActivity">

    <ImageButton
        android:layout_width="241dp"
        android:layout_height="170dp"
        android:id="@+id/personnelButton"
        android:background="@drawable/cushman_hauler"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hauler 1200X"
        android:id="@+id/textView7"
        android:layout_below="@+id/personnelButton"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:layout_width="241dp"
        android:layout_height="170dp"
        android:id="@+id/utilityButton"
        android:background="@drawable/cushman_pro"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/personnelButton"
        android:layout_alignStart="@+id/personnelButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hauler PRO-X"
        android:id="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageButton
        android:layout_width="241dp"
        android:layout_height="170dp"
        android:id="@+id/imageButton6"
        android:background="@drawable/cushman_pro"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/personnelButton"
        android:layout_alignStart="@+id/personnelButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hauler 800X"
        android:id="@+id/textView9"
        android:layout_below="@+id/utilityButton"
        android:layout_alignLeft="@+id/utilityButton"
        android:layout_alignStart="@+id/utilityButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ViewFlipper
        android:layout_width="475dp"
        android:layout_height="319dp"
        android:id="@+id/viewFlipper6"
        android:touchscreenBlocksFocus="false"
        android:animateFirstView="false"
        android:forceHasOverlappingRendering="false"
        android:flipInterval="3000"
        android:autoStart="true"
        android:layout_below="@+id/utilityButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="475dp"
            android:layout_height="319dp"
            android:id="@+id/imageView15"
            android:background="@drawable/hauler_800_slideshow_1"
            android:layout_alignTop="@+id/browseCushman"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="475dp"
            android:layout_height="319dp"
            android:id="@+id/imageView14"
            android:background="@drawable/hauler_800_slideshow_2"
            android:layout_above="@+id/commercialButton"
            android:layout_toRightOf="@+id/commercialButton"
            android:layout_toEndOf="@+id/commercialButton" />
    </ViewFlipper>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rlam.cushmanshowcaseapp.Hauler800">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Request More Information"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Key Selling Points"
        android:id="@+id/button9"
        android:layout_alignBottom="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Video"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text="Specs"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hauler 800"
        android:id="@+id/textView5"
        android:textSize="32dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        android:layout_width="355dp"
        android:layout_height="250dp"
        android:id="@+id/imageView5"
        android:background="@drawable/cushman_hauler"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Tap to view larger images)"
        android:id="@+id/textView6"
        android:layout_below="@+id/viewFlipper"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_marginTop="36dp" />
    <ScrollView
        android:layout_width="375dp"
        android:layout_height="275dp"
        android:id="@+id/scrollView"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></ScrollView>


    <ViewFlipper
        android:layout_width="400dp"
        android:layout_height="268dp"
        android:id="@+id/viewFlipper"
        android:touchscreenBlocksFocus="false"
        android:animateFirstView="false"
        android:forceHasOverlappingRendering="false"
        android:flipInterval="3000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="268dp"
            android:id="@+id/imageView01"
            android:background="@drawable/hauler_800_slideshow_1"
            android:layout_alignTop="@+id/viewFlipper"
            android:layout_alignLeft="@+id/viewFlipper"
            android:layout_alignStart="@+id/viewFlipper" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="268dp"
            android:id="@+id/imageView02"
            android:layout_alignTop="@+id/viewFlipper"
            android:layout_alignLeft="@+id/viewFlipper"
            android:layout_alignStart="@+id/viewFlipper"
            android:background="@drawable/hauler_800_slideshow_2" />

    </ViewFlipper>

    <TextView
        android:layout_width="375dp"
        android:layout_height="250dp"
        android:text="The Cushman Hauler 800 is built to move people and small equipment around any work site, from a power plant to a golf course, with ease. With standard seating for two, a 5.9-cubic-foot cargo bed and a total capacity of 800 pounds, the Hauler 800 can ferry small crews around any site quickly. An optional limited-slip differential is gentle on turf and provides enhanced control and traction on wet and loose terrain. Available with either a 48-volt electric drivetrain or a powerful, fuel efficient 13hp Kawasaki gas-powered engine, the Hauler 800 is the ideal runabout vehicle to handle everyday tasks and transportation needs."
        android:id="@+id/textView17"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

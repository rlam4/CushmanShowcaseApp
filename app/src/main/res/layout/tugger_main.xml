<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rlam.cushmanshowcaseapp.TuggerMainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@drawable/icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="241dp"
        android:layout_height="171dp"
        android:id="@+id/tuggerButton"
        android:background="@drawable/cushman_factory"
        android:layout_above="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8k Tug"
        android:id="@+id/textView10"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tuggerButton"
        android:layout_alignStart="@+id/tuggerButton"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Presentations"
        android:id="@+id/button6"
        android:layout_below="@+id/tuggerButton"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Competitive Advantages"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SK Tug"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <ViewFlipper
        android:layout_width="475dp"
        android:layout_height="319dp"
        android:id="@+id/viewFlipper10"
        android:touchscreenBlocksFocus="false"
        android:animateFirstView="false"
        android:forceHasOverlappingRendering="false"
        android:flipInterval="3000"
        android:autoStart="true"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="475dp"
            android:layout_height="319dp"
            android:id="@+id/imageView22"
            android:background="@drawable/hauler_800_slideshow_2"
            android:layout_above="@+id/commercialButton"
            android:layout_toRightOf="@+id/commercialButton"
            android:layout_toEndOf="@+id/commercialButton" />

        <ImageView
            android:layout_width="475dp"
            android:layout_height="319dp"
            android:id="@+id/imageView23"
            android:background="@drawable/hauler_800_slideshow_1"
            android:layout_alignTop="@+id/browseCushman"
            android:layout_centerHorizontal="true" />
    </ViewFlipper>
</RelativeLayout>
